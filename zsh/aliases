# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

# rails
alias it='infinity_test --rails --rspec'
alias scaffold='script/rails generate nifty:scaffold'
alias rst='touch tmp/restart.txt'

# commands starting with % for pasting from web
alias %=' '

# cappuccino
alias ju="jackup -e \"require('jack/file').File('.')\" -E deployment"

alias slt='open -a "Sublime Text 2"'

alias taganddeploy="git tag -f production && git push origin master && git push origin production && bundle exec cap deploy"
